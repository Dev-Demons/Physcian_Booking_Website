@model Binke.ViewModels.NetworkCount
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Network Count";
}
<head>
    <link href='https://assets.doctyme.com' rel='dns-prefetch preconnect'>
    <link href='//maps.googleapis.com' rel='dns-prefetch'>
    <link href='//maps.gstatic.com' rel='dns-prefetch'>

    <link rel='icon' href='favicon.ico' type='image/x-icon' />
</head>

@section pageheader{
    <h3><i class="fa fa-expand"></i> Network Count </h3>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li> <a href="/WebSetting/"> Web Settings </a></li>
            <li class="active"> Network Count </li>
        </ol>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Network Count</h3>
            </div>
            <!--No Label Form-->
            <!--===================================================-->
            @using (Html.BeginForm("NetworkCount", "WebSetting", FormMethod.Post, new { id = "frmBasicInfo", @class = "form-horizontal form-bordered" }))
            {
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 mar-btm">
                                <label class="control-label"><b>Doctor Count <small>(@Model.DoctorCount)</small></b></label>
                                @Html.TextBoxFor(x => x.JsonDoctorCount, new { @class = "form-control", placeholder = "Doctor Count" })
                                @Html.ValidationMessageFor(x => x.JsonDoctorCount, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2 mar-btm">
                                <label class="control-label"><b>Pharmacy Count <small>(@Model.PharmacyCount)</small></b></label>
                                @Html.TextBoxFor(x => x.JsonPharmacyCount, new { @class = "form-control", placeholder = "Pharmacy Count" })
                                @Html.ValidationMessageFor(x => x.JsonPharmacyCount, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2 mar-btm">
                                <label class="control-label"><b>SeniorCare Count <small>(@Model.SeniorCareCount)</small></b></label>
                                @Html.TextBoxFor(x => x.JsonSeniorCareCount, new { @class = "form-control", placeholder = "SeniorCare Count" })
                                @Html.ValidationMessageFor(x => x.JsonSeniorCareCount, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3 mar-btm">
                                <label class="control-label"><b>Facilities Count <small>(@Model.FacilitiesCount)</small></b></label>
                                @Html.TextBoxFor(x => x.JsonFacilitiesCount, new { @class = "form-control", placeholder = "Facilities Count" })
                                @Html.ValidationMessageFor(x => x.JsonFacilitiesCount, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3 mar-btm">
                                <label class="control-label"><b>Mostly Searched Drug<small></small></b></label>
                                @Html.TextBoxFor(x => x.MostlySearchedDrug, new { @class = "form-control", placeholder = "Mostly Searched Drug" })
                                @Html.ValidationMessageFor(x => x.JsonFacilitiesCount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                </div>
                <div class="panel-footer text-right">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Save</button>
                </div>
            }
            <!--===================================================-->
            <!--End No Label Form-->
        </div>
    </div>
</div>