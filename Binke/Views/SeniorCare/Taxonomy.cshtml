@section pagespecific{
    <script type="text/javascript">
        //$("#MnuSeniorCare").addClass('menu-open');
        //$("#MnuSeniorCare ul li a p").each(function () {
        //    var text = $(this).text();
        //    if (text == "Taxonomy") {
