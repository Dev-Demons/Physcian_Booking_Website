<script>
    $(function () {
        $("#btnContactus").click(function () {
            return ContactUs();
        });
    });

    function ContactUs() {
        $.validator.unobtrusive.parse($('#contactform'));
        var url = '@Url.Action("ContactUs", "Home")';
        var isValid = $("#contactform").valid();
        if (isValid) {
            $.post("@Url.Action("ContactUs", "Home")",
             $("#contactform").serialize(),
                function(response) {
                    HandleResponse(response);
                    if (response.Status) {
                        ClearContactUs();
                    }
            });
        }
        return false;
    }

    function ClearContactUs() {
        $("#Name").val("");
        $("#Department").val("");
        $("#Subject").val("");
        $("#Message").val("");
        $("#Email").val("");
    }

    function validateEmail($email) {
        var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
        return emailReg.test($email);
    }
</script>