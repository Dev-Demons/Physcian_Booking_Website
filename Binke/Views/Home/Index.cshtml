<script>
    var arrOrgType = [{
        id: "1005",
        tabName: "PHARMACY"
    }, {
        id: "1006",
        tabName: "FACILITY"
    }, {
            id: "1007",
            tabName: "SENIOR CARE"
    }];

    $jq(document).ready(function () {
        $jq("#searchBoxZipcode").autocomplete({
            source: function (request, response) {
                 //alert(encodeURI(request.term));
                $jq.ajax({
                    url: '/GetZipCityStateList/' + encodeURI(request.term),
                    method: "GET",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (JSON.stringify(data.length) > 0) {
                            response(data);
                        } else {
                            response(["Data not found"]);
                        }
                    },
                    error: function (result) {
                        //alert('Error');
                        console.log(result);
                    }
                });
            },
            minLength: 3,
            select: function (event, ui) {
                if (ui.item.value.trim() !== "Data not found") {
                    //alert(ui.item.value);
                    $jq("#searchBoxZipcode").val(ui.item.value);
                }
                else {
                    ui.item.value = '';
                    $jq("#searchBoxZipcode").empty();
                }
                //console.log("Selected value: " + ui.item.value );
            }
        });
        $jq("#searchBox").focusin(function () {
            if (search_type === 'DOCTOR') {
                $jq("#searchBox").autocomplete({
                    source: function (request, response) {
                        var redirectUrl = '@Url.Action("GetAllSpecialization", "Home")';
                        $jq.ajax({
                            url: redirectUrl,
                            type: "POST",
                            cache: false,
                            data: { 'specialization': encodeURI(request.term) },
                            success: function (result) {
                                if (JSON.stringify(result.length) > 0) {
                                    response(result);
                                } else {
                                    response(["Data not found"]);
                                }
                            },
                            error: function (result) {
                                //alert('Error');
                                console.log(result);
                            }
                        });
                    },
                    minLength: 3,
                    select: function (event, ui) {
                        if (ui.item.value.trim() !== "Data not found") {
                            //alert(ui.item.value);
                            $jq("#searchBox").val(ui.item.value);
                        }
                        else {
                            ui.item.value = '';
                            $jq("#searchBox").empty();
                        }
                        //console.log("Selected value: " + ui.item.value );
                    }
                });
            }
            else
            {
                $jq("#searchBox").autocomplete({
                    source: function (request, response) {
                        var redirectUrl = '@Url.Action("GetAllOrgName", "Home")';
                        var OrgTypeId = "";
                        arrOrgType.forEach(function (e) {
                            if (search_type == e.tabName) OrgTypeId=e.id;
                        });
                        $jq.ajax({
                            url: redirectUrl,
                            type: "POST",
                            cache: false,
                            data: { 'searchText': encodeURI(request.term), 'OrgType': OrgTypeId   },
                            success: function (result) {
                                if (JSON.stringify(result.length) > 0) {
                                    //result.forEach(function (item) {
                                    //    item.substr(0, 1).toUpperCase() + item.substr(1);
                                    //});
                                    response(result);

                                } else {
                                    response(["Data not found"]);
                                }
                            },
                            error: function (result) {
                                //alert('Error');
                                console.log(result);
                            }
                        });
                    },
                    minLength: 3,
                    select: function (event, ui) {
                        if (ui.item.value.trim() !== "Data not found") {
                            var selectedText = ui.item.value.charAt(0).toUpperCase() + ui.item.value.substr(1);
                            //alert(selectedText);
                            $jq("#searchBox").val(selectedText);
                            $jq("#searchBox").addClass('capitalise');
                        }
                        else {
                            ui.item.value = '';
                            $jq("#searchBox").empty();
                        }
                        //console.log("Selected value: " + ui.item.value );
                    }
                });

            }
        });

        $jq("#searchDrugBox").autocomplete({
            source: function (request, response) {
                    var redirectUrl = '@Url.Action("GetAllDrugName", "Home")';
                    $jq.ajax({
                        url: redirectUrl,
                        type: "POST",
                        cache: false,
                        data: { 'drugname': encodeURI(request.term) },
                        success: function (result) {
                            if (JSON.stringify(result.length) > 0) {
                                response(result);
                            } else {
                                response(["Data not found"]);
                            }
                        },
                        error: function (result) {
                            //alert('Error');
                            console.log(result);
                        }
                    });
                },
                minLength: 3,
                select: function (event, ui) {
                    if (ui.item.value.trim() !== "Data not found") {
                        //alert(ui.item.value);
                        $jq("#searchDrugBox").val(ui.item.value);
                    }
                    else {
                        ui.item.value = '';
                        $jq("#searchDrugBox").empty();
                    }
                    //console.log("Selected value: " + ui.item.value );
                }
            });

      $jq("#searchBox").on("focus", function () {
            if (search_type === 'DRUGS') {
             $jq("#searchBox").autocomplete({
