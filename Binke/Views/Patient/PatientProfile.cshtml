@model Doctyme.Model.Patient
@{
    ViewBag.Title = "Patient Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link href='https://assets.doctyme.com' rel='dns-prefetch preconnect'>
    <link href='//maps.googleapis.com' rel='dns-prefetch'>
    <link href='//maps.gstatic.com' rel='dns-prefetch'>

    <link rel='icon' href='favicon.ico' type='image/x-icon' />
</head>

@section pageheader{
    <h3><i class="fa fa-home"></i> Patient Profile </h3>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li> <a href="/Patient/"> Patient </a></li>
            <li class="active"> Patient Profile </li>
        </ol>
    </div>
}

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
        <div class="panel">
            <div class="panel-body np">
                <img src="@Model.PatientUser.ProfilePicture" alt="Cover" class="img-responsive">
                <div class="text-center">
                    <!-- panel body -->
                    <h4 class="text-lg text-overflow mar-top">@Model.PatientUser.FullName</h4>
                    <p class="text-sm"></p>
                    <!--/ panel body -->
                    <div class="pad-ver">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
        <div class="panel">
            <div class="panel-body pad-no">
                <!--Default Tabs (Left Aligned)-->
                <!--===================================================-->
                <div class="tab-base">
                    <!--Nav Tabs-->
                    <ul class="nav nav-tabs">
                        <li class="active"> <a data-toggle="tab" href="#UserInformation"> <i class="fa fa-lg fa-user"> </i> Patient Information</a> </li>
                        <li> <a data-toggle="tab" href="#Address"> <i class="fa fa-lg fa-home"> </i> Address </a> </li>
                        <li class="pull-right"> <a href="/PatientBasicInformation/@Model.PatientId"> <i class="fa fa-lg fa-edit"> </i> Edit </a> </li>
                    </ul>
                    <!--Tabs Content-->
                    <div class="tab-content">
                        <div id="UserInformation" class="tab-pane fade active in">
                            <div class="panel">
                                <div class="panel-body">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td><b> Name </b></td>
                                                <td>@Model.PatientUser.FullName</td>
                                            </tr>
                                            <tr>
                                                <td><b> Email </b></td>
                                                <td><a href="mailto:@Model.PatientUser.Email"> @Model.PatientUser.Email</a></td>
                                            </tr>
                                            <tr>
                                                <td><b> Phone No. </b></td>
                                                <td>@(Model.PatientUser==null? "---" :Model.PatientUser.PhoneNumber)</td>
                                            </tr>
                                            <tr>
                                                <td><b> Fax No. </b></td>
                                                <td>@(Model.PatientUser==null? "---":Model.PatientUser.FaxNumber)</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="Address" class="tab-pane fade">
                            <div class="panel-body">
                                @if (Model.Address.Any())
                                {
                                    var address = Model.Address.FirstOrDefault();

                                    <div class="mapouter">
                                        <div class="gmap_canvas">
                                            <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q= @address.Address1&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--===================================================-->
                <!--End Default Tabs (Left Aligned)-->
            </div>
        </div>
    </div>
</div>