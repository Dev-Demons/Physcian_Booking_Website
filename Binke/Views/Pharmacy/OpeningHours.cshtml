<div class="row">
    <div class="col-lg-12">
        <div id="TopFormBlock" class="box-primary"></div>
        <div class="tab-base">

            @*<div class="panel-heading">
             <div class="panel-control py-10px">
                 <button href="javascript:;" class="pull-right btn btn-sm btn-primary" id="AddPharmacy">Add Pharmacy</button>
             </div>
